	mass_X2 = mass_X1
end-parameter-section
LABELS-SECTION
	#1eVNeAgauss = gauss[alphaAe,Aloc]
	#1eVNeAregcou = regcoul[Aloc,betaAe]
	#Eaddtrick = gauss[0.0,0.0]
